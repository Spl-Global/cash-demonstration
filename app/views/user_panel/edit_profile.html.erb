<div class="container-fluid container-top">
	<div class="container container-signin container-sign">
		<div class="modal-login-body">
			<h3 class="text-center">Update Profile</h3>
			<%= form_for(current_user) do |f| %>
				<div class="form-group mt-3">
					<label for="name">Name</label>
					<%= f.text_field :name, autofocus: true,required: true, placeholder: 'Enter Your Name', class: 'form-control login-form', required: true %>
				</div>
				<div class="actions mt-3">
					<%= f.submit "Update", class: 'btn btn-primary btn-lg btn-block mb-3 btn-submit' %>
					<%= link_to "Dashboard",companies_path,class: "btn btn-secondary btn-lg btn-block btn-submit mb-3 "%>
				</div>
			<% end %>
		</div>
	</div>
</div>